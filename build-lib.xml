<?xml version="1.0" encoding="UTF-8"?>
<!--
	Ant build script for the util library
-->
<project default="com">
	<property name="bin.dir" value="D:/Development/Java/lib/npw/" />
	
	<property name="util-version" value="1.0.0" />
	
	<target name="compile">
		<javac includeantruntime="false" srcdir="./src/com/nullpointerworks/" destdir="bin/" />
		<javac includeantruntime="false" srcdir="./src/exp/nullpointerworks/" destdir="bin/" />
	</target>
	
	<target name="com" depends="compile">
		<jar destfile="${bin.dir}/libnpw-util-${util-version}.jar">
	        <fileset dir="bin/" includes="com/nullpointerworks/util/**/*.class" />
	        <fileset dir="bin/" includes="exp/nullpointerworks/util/**/*.class" />
	        <fileset dir="src/" includes="com/nullpointerworks/util/**/*.java" />
	        <fileset dir="src/" includes="exp/nullpointerworks/util/**/*.java" />
	    </jar>
	</target>
	
</project>